                                    { element: document.querySelector('.text-3xl.font-bold.text-orange-600'), target: 150, suffix: '+' }
                                ];

                                // Intersection Observer for animations
                                const observer = new IntersectionObserver((entries) => {
                                    entries.forEach(entry => {
                                        if (entry.isIntersecting) {
                                            // Animate statistics when they come into view
                                            if (entry.target.closest('.grid.grid-cols-2.lg\\:grid-cols-4')) {
                                                animateStats();
                                            }
                                        }
                                    });
                                }, { threshold: 0.5 });

                                // Observe the statistics section
                                const statsSection = document.querySelector('.grid.grid-cols-2.lg\\:grid-cols-4.gap-6.mt-12');
                                if (statsSection) {
                                    observer.observe(statsSection);
                                }

                                function animateStats() {
                                    stats.forEach((stat, index) => {
                                        if (stat.element) {
                                            let current = 0;
                                            const increment = stat.target / 50; // 50 steps
                                            const timer = setInterval(() => {
                                                current += increment;
                                                if (current >= stat.target) {
                                                    current = stat.target;
                                                    clearInterval(timer);
                                                }

                                                if (stat.target === 50000) {
                                                    stat.element.textContent = Math.floor(current).toLocaleString() + stat.suffix;
                                                } else {
                                                    stat.element.textContent = Math.floor(current) + stat.suffix;
                                                }
                                            }, 40);
                                        }
                                    });
                                }
                            });

                            // Form validation for future forms
                            function validateCreditForm(formData) {
                                const required = ['name', 'email', 'phone', 'panCard'];
                                const errors = [];

                                required.forEach(field => {
                                    if (!formData[field] || formData[field].trim() === '') {
                                        errors.push(`${field} is required`);
                                    }
                                });

                                // Validate email
                                if (formData.email && !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(formData.email)) {
                                    errors.push('Please enter a valid email address');
                                }

                                // Validate phone
                                if (formData.phone && !/^[6-9]\d{9}$/.test(formData.phone)) {
                                    errors.push('Please enter a valid 10-digit mobile number');
                                }

                                // Validate PAN
                                if (formData.panCard && !/^[A-Z]{5}\d{4}[A-Z]{1}$/.test(formData.panCard.toUpperCase())) {
                                    errors.push('Please enter a valid PAN card number');
                                }

                                return errors;
                            }

                            // Credit score calculator (simplified)
                            function calculateCreditScore(factors) {
                                // This is a simplified calculation for demonstration
                                let score = 300; // Base score

                                // Payment history (35% weight)
                                score += (factors.paymentHistory || 0) * 0.35 * 600;

                                // Credit utilization (30% weight)
                                score += (100 - (factors.creditUtilization || 0)) * 0.3 * 6;

                                // Credit age (15% weight)
                                score += Math.min(factors.creditAge || 0, 10) * 0.15 * 60;

                                // Credit mix (10% weight)
                                score += (factors.creditMix || 0) * 0.1 * 600;

                                // New credit (10% weight)
                                score += (100 - (factors.newCredit || 0)) * 0.1 * 6;

                                return Math.min(Math.max(Math.round(score), 300), 900);
                            }

