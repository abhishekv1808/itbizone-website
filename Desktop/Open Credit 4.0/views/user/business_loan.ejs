                        <script>
                            // Form step management
                            let currentStep = 1;
                            const totalSteps = 3;

                            // Scroll to form function
                            function scrollToForm() {
                                document.getElementById('application-form').scrollIntoView({
                                    behavior: 'smooth'
                                });
                            }

                            // Form step navigation
                            function changeStep(direction) {
                                const newStep = currentStep + direction;

                                if (newStep < 1 || newStep > totalSteps) return;

                                if (direction === 1 && !validateCurrentStep()) return;

                                showStep(newStep);
                            }

                            function showStep(step) {
                                // Hide all steps
                                for (let i = 1; i <= totalSteps; i++) {
                                    document.getElementById(`step-${i}`).classList.add('hidden');
                                    document.getElementById(`step-${i}-indicator`).classList.remove('active', 'bg-green-600', 'text-white');
                                    document.getElementById(`step-${i}-indicator`).classList.add('bg-gray-300', 'text-gray-500');
                                }

                                // Show current step
                                document.getElementById(`step-${step}`).classList.remove('hidden');
                                document.getElementById(`step-${step}-indicator`).classList.remove('bg-gray-300', 'text-gray-500');
                                document.getElementById(`step-${step}-indicator`).classList.add('active', 'bg-green-600', 'text-white');

                                // Update progress bars
                                for (let i = 1; i < totalSteps; i++) {
                                    const progressBar = document.getElementById(`progress-${i}-${i + 1}`);
                                    if (step > i) {
                                        progressBar.classList.remove('bg-gray-300');
                                        progressBar.classList.add('bg-green-600');
                                    } else {
                                        progressBar.classList.remove('bg-green-600');
                                        progressBar.classList.add('bg-gray-300');
                                    }
                                }

                                // Update navigation buttons
                                const prevBtn = document.getElementById('prevBtn');
                                const nextBtn = document.getElementById('nextBtn');
                                const submitBtn = document.getElementById('submitBtn');

                                if (step === 1) {
                                    prevBtn.classList.add('hidden');
                                } else {
                                    prevBtn.classList.remove('hidden');
                                }

                                if (step === totalSteps) {
                                    nextBtn.classList.add('hidden');
                                    submitBtn.classList.remove('hidden');
                                } else {
                                    nextBtn.classList.remove('hidden');
                                    submitBtn.classList.add('hidden');
                                }

                                currentStep = step;

                                // Calculate EMI if on step 3 and fields are filled
                                if (step === 3) {
                                    calculateEMI();
                                }
                            }

                            // Form validation
                            function validateCurrentStep() {
                                const stepElement = document.getElementById(`step-${currentStep}`);
                                const inputs = stepElement.querySelectorAll('input[required], select[required], textarea[required]');
                                let isValid = true;

                                inputs.forEach(input => {
                                    clearError(input.id);

                                    if (!input.value.trim()) {
                                        showError(input.id, 'This field is required');
                                        isValid = false;
                                    } else {
                                        // Specific validations
                                        if (input.id === 'gstNumber' && !validateGST(input.value)) {
                                            showError(input.id, 'Please enter a valid 15-digit GST number');
                                            isValid = false;
                                        } else if (input.id === 'panNumber' && !validatePAN(input.value)) {
                                            showError(input.id, 'Please enter a valid PAN number');
                                            isValid = false;
                                        } else if (input.id === 'monthlyProfit' && parseInt(input.value) < 50000) {
                                            showError(input.id, 'Minimum monthly profit requirement is ₹50,000');
                                            isValid = false;
                                        } else if (input.id === 'loanAmount') {
                                            const amount = parseInt(input.value);
                                            if (amount < 100000 || amount > 50000000) {
                                                showError(input.id, 'Loan amount must be between ₹1,00,000 and ₹5,00,00,000');
                                                isValid = false;
                                            }
                                        }
                                    }
                                });

                                return isValid;
                            }

                            function showError(fieldId, message) {
                                const errorElement = document.getElementById(`${fieldId}-error`);
                                const inputElement = document.getElementById(fieldId);

                                if (errorElement) {
                                    errorElement.textContent = message;
                                    errorElement.classList.remove('hidden');
                                }

                                if (inputElement) {
                                    inputElement.classList.add('border-red-500');
                                    inputElement.classList.remove('border-gray-300');
                                }
                            }

                            function clearError(fieldId) {
                                const errorElement = document.getElementById(`${fieldId}-error`);
                                const inputElement = document.getElementById(fieldId);

                                if (errorElement) {
                                    errorElement.classList.add('hidden');
                                }

                                if (inputElement) {
                                    inputElement.classList.remove('border-red-500');
                                    inputElement.classList.add('border-gray-300');
                                }
                            }

                            // Validation helper functions
                            function validateGST(gst) {
                                return /^\d{2}[A-Z]{5}\d{4}[A-Z]{1}\d[Z]{1}[A-Z\d]{1}$/.test(gst.toUpperCase());
                            }

                            function validatePAN(pan) {
                                return /^[A-Z]{5}\d{4}[A-Z]{1}$/.test(pan.toUpperCase());
                            }

                            // EMI Calculator for Business Loans
                            function calculateEMI() {
                                const loanAmountInput = document.getElementById('loanAmount');
                                const tenureInput = document.getElementById('loanTenure');

                                if (loanAmountInput.value && tenureInput.value) {
                                    const principal = parseFloat(loanAmountInput.value);
                                    const tenureYears = parseInt(tenureInput.value);
                                    const tenureMonths = tenureYears * 12;
                                    const annualRate = 9.5; // Business loan interest rate
                                    const monthlyRate = annualRate / 12 / 100;

                                    // EMI calculation using the formula
                                    const emi = (principal * monthlyRate * Math.pow(1 + monthlyRate, tenureMonths)) /
                                        (Math.pow(1 + monthlyRate, tenureMonths) - 1);

                                    const totalAmount = emi * tenureMonths;
                                    const totalInterest = totalAmount - principal;

                                    // Display results
                                    document.getElementById('calculated-emi').textContent = `₹${Math.round(emi).toLocaleString()}`;
                                    document.getElementById('total-interest').textContent = `₹${Math.round(totalInterest).toLocaleString()}`;
                                    document.getElementById('total-amount').textContent = `₹${Math.round(totalAmount).toLocaleString()}`;
                                    document.getElementById('emi-display').classList.remove('hidden');
                                }
                            }

                            // Form submission
                            document.getElementById('businessLoanForm').addEventListener('submit', function (e) {
                                e.preventDefault();

                                if (!validateCurrentStep()) {
                                    return;
                                }

                                // Simulate form submission
                                const formData = new FormData(this);
                                const applicationId = 'BL' + Date.now().toString().slice(-8);

                                // Hide form and show success message
                                this.classList.add('hidden');
                                document.getElementById('success-message').classList.remove('hidden');
                                document.getElementById('application-id').textContent = applicationId;

                                // Scroll to success message
                                document.getElementById('success-message').scrollIntoView({ behavior: 'smooth' });

                                console.log('Business loan form submitted with data:', Object.fromEntries(formData));
                            });

                            // Real-time EMI calculation
                            document.getElementById('loanAmount').addEventListener('input', calculateEMI);
                            document.getElementById('loanTenure').addEventListener('change', calculateEMI);

                            // Clear errors on input
                            document.querySelectorAll('input, select, textarea').forEach(input => {
                                input.addEventListener('input', function () {
                                    clearError(this.id);
                                });
                            });

                            // Format GST and PAN inputs
                            document.getElementById('gstNumber').addEventListener('input', function () {
                                this.value = this.value.toUpperCase();
                            });

                            document.getElementById('panNumber').addEventListener('input', function () {
                                this.value = this.value.toUpperCase();
                            });

                            // Initialize first step
                            showStep(1);
                        </script>
