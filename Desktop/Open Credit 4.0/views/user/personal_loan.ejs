                        <script>
                            // Form step management
                            let currentStep = 1;
                            const totalSteps = 3;

                            // Scroll to form function
                            function scrollToForm() {
                                document.getElementById('application-form').scrollIntoView({
                                    behavior: 'smooth'
                                });
                            }

                            // Form step navigation
                            function changeStep(direction) {
                                const newStep = currentStep + direction;

                                if (newStep < 1 || newStep > totalSteps) return;

                                if (direction === 1 && !validateCurrentStep()) return;

                                showStep(newStep);
                            }

                            function showStep(step) {
                                // Hide all steps
                                for (let i = 1; i <= totalSteps; i++) {
                                    document.getElementById(`step-${i}`).classList.add('hidden');
                                    const indicator = document.getElementById(`step-${i}-indicator`);
                                    if (indicator) {
                                        indicator.classList.remove('active', 'bg-blue-600', 'text-white');
                                        indicator.classList.add('bg-gray-300', 'text-gray-500');
                                    }
                                }

                                // Show current step
                                document.getElementById(`step-${step}`).classList.remove('hidden');
                                const currentIndicator = document.getElementById(`step-${step}-indicator`);
                                if (currentIndicator) {
                                    currentIndicator.classList.remove('bg-gray-300', 'text-gray-500');
                                    currentIndicator.classList.add('active', 'bg-blue-600', 'text-white');
                                }

                                // Update progress bars
                                for (let i = 1; i < totalSteps; i++) {
                                    const progressBar = document.getElementById(`progress-${i}-${i + 1}`);
                                    if (progressBar) {
                                        if (step > i) {
                                            progressBar.classList.remove('bg-gray-300');
                                            progressBar.classList.add('bg-blue-600');
                                        } else {
                                            progressBar.classList.remove('bg-blue-600');
                                            progressBar.classList.add('bg-gray-300');
                                        }
                                    }
                                }

                                // Update navigation buttons
                                const prevBtn = document.getElementById('prevBtn');
                                const nextBtn = document.getElementById('nextBtn');
                                const submitBtn = document.getElementById('submitBtn');

                                if (step === 1) {
                                    prevBtn.classList.add('hidden');
                                } else {
                                    prevBtn.classList.remove('hidden');
                                }

                                if (step === totalSteps) {
                                    nextBtn.classList.add('hidden');
                                    submitBtn.classList.remove('hidden');
                                } else {
                                    nextBtn.classList.remove('hidden');
                                    submitBtn.classList.add('hidden');
                                }

                                currentStep = step;
                            }

                            // Form validation
                            function validateCurrentStep() {
                                const stepElement = document.getElementById(`step-${currentStep}`);
                                const inputs = stepElement.querySelectorAll('input[required], select[required], textarea[required]');
                                let isValid = true;

                                inputs.forEach(input => {
                                    clearError(input.id);

                                    if (input.type === 'checkbox') {
                                        if (!input.checked) {
                                            showError(input.id, 'This field is required');
                                            isValid = false;
                                        }
                                    } else if (!input.value.trim()) {
                                        showError(input.id, 'This field is required');
                                        isValid = false;
                                    } else {
                                        // Specific validations
                                        if (input.id === 'contactNumber' && !validateMobile(input.value)) {
                                            showError(input.id, 'Please enter a valid 10-digit mobile number');
                                            isValid = false;
                                        } else if (input.id === 'mailId' && !validateEmail(input.value)) {
                                            showError(input.id, 'Please enter a valid email address');
                                            isValid = false;
                                        } else if ((input.id === 'currentPincode' || input.id === 'permanentPincode') && !validatePincode(input.value)) {
                                            showError(input.id, 'Please enter a valid 6-digit pincode');
                                            isValid = false;
                                        } else if (input.id === 'panNumber' && !validatePAN(input.value)) {
                                            showError(input.id, 'Please enter a valid PAN number (e.g., ABCDE1234F)');
                                            isValid = false;
                                        } else if (input.id === 'dateOfBirth' && !validateAge(input.value)) {
                                            showError(input.id, 'You must be at least 21 years old and not more than 60 years old');
                                            isValid = false;
                                        } else if (input.id === 'loanAmount') {
                                            const amount = parseInt(input.value);
                                            if (amount < 50000 || amount > 2500000) {
                                                showError(input.id, 'Loan amount must be between ‚Çπ50,000 and ‚Çπ25,00,000');
                                                isValid = false;
                                            }
                                        }
                                    }
                                });

                                return isValid;
                            }

                            function showError(fieldId, message) {
                                const errorElement = document.getElementById(`${fieldId}-error`);
                                const inputElement = document.getElementById(fieldId);

                                if (errorElement) {
                                    errorElement.textContent = message;
                                    errorElement.classList.remove('hidden');
                                }

                                if (inputElement) {
                                    inputElement.classList.add('border-red-500');
                                    inputElement.classList.remove('border-gray-300');
                                }
                            }

                            function clearError(fieldId) {
                                const errorElement = document.getElementById(`${fieldId}-error`);
                                const inputElement = document.getElementById(fieldId);

                                if (errorElement) {
                                    errorElement.classList.add('hidden');
                                }

                                if (inputElement) {
                                    inputElement.classList.remove('border-red-500');
                                    inputElement.classList.add('border-gray-300');
                                }
                            }

                            // Validation helper functions
                            function validateMobile(mobile) {
                                return /^[6-9]\d{9}$/.test(mobile);
                            }

                            function validateEmail(email) {
                                return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
                            }

                            function validatePincode(pincode) {
                                return /^\d{6}$/.test(pincode);
                            }

                            function validatePAN(pan) {
                                return /^[A-Z]{5}[0-9]{4}[A-Z]{1}$/.test(pan.toUpperCase());
                            }

                            function validateAge(dateOfBirth) {
                                const today = new Date();
                                const birthDate = new Date(dateOfBirth);
                                let age = today.getFullYear() - birthDate.getFullYear();
                                const monthDiff = today.getMonth() - birthDate.getMonth();

                                if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) {
                                    age--;
                                }

                                return age >= 21 && age <= 60;
                            }

                            // Address copy functionality
                            document.getElementById('sameAsCurrentAddress').addEventListener('change', function () {
                                if (this.checked) {
                                    document.getElementById('permanentAddress').value = document.getElementById('currentAddress').value;
                                    document.getElementById('permanentPincode').value = document.getElementById('currentPincode').value;
                                } else {
                                    document.getElementById('permanentAddress').value = '';
                                    document.getElementById('permanentPincode').value = '';
                                }
                            });

                            // PAN number uppercase conversion
                            document.getElementById('panNumber').addEventListener('input', function () {
                                this.value = this.value.toUpperCase();
                            });

                            // Form submission
                            document.getElementById('loanApplicationForm').addEventListener('submit', function (e) {
                                e.preventDefault();

                                if (!validateCurrentStep()) {
                                    return;
                                }

                                // Simulate form submission
                                const formData = new FormData(this);
                                const applicationId = 'OC' + Date.now().toString().slice(-8);

                                // Hide form and show success message
                                this.classList.add('hidden');
                                document.getElementById('success-message').classList.remove('hidden');
                                document.getElementById('application-id').textContent = applicationId;

                                // Scroll to success message
                                document.getElementById('success-message').scrollIntoView({ behavior: 'smooth' });

                                console.log('Form submitted with data:', Object.fromEntries(formData));
                            });

                            // Clear errors on input
                            document.querySelectorAll('input, select, textarea').forEach(input => {
                                input.addEventListener('input', function () {
                                    clearError(this.id);
                                });
                            });

                            // Initialize first step
                            showStep(1);
                        </script>

