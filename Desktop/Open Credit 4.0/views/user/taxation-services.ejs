                                // Calculate total deductions
                                const totalDeductions = deduction80C + deduction80D + hraExemption + homeLoanInterest;

                                // Calculate taxable income
                                const taxableIncome = Math.max(0, income - totalDeductions);

                                // Tax slabs for FY 2023-24 (New Regime)
                                let incomeTax = 0;
                                let basicExemption = 300000; // â‚¹3 lakh basic exemption

                                // Adjust exemption based on age
                                if (ageCategory === '60to80') {
                                    basicExemption = 300000; // Same as new regime
                                } else if (ageCategory === 'above80') {
                                    basicExemption = 500000; // â‚¹5 lakh for super senior citizens
                                }

                                if (taxableIncome > basicExemption) {
                                    const taxableAmount = taxableIncome - basicExemption;

                                    // New tax regime slabs
                                    if (taxableAmount <= 300000) {
                                        incomeTax = taxableAmount * 0.05;
                                    } else if (taxableAmount <= 600000) {
                                        incomeTax = 300000 * 0.05 + (taxableAmount - 300000) * 0.10;
