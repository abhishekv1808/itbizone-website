                            // Quick Quote Form Handler
                            document.getElementById('quickQuoteForm').addEventListener('submit', function (e) {
                                e.preventDefault();

                                // Get form data
                                const formData = new FormData(this);
                                const data = Object.fromEntries(formData);

                                // Simulate form submission
                                alert('Thank you for your interest! Our team will contact you shortly with personalized life insurance quotes.');

                                console.log('Quote form submitted:', data);
                            });

                            // Premium Calculator Form Handler
                            document.getElementById('premiumCalculator').addEventListener('submit', function (e) {
                                e.preventDefault();

                                // Get selected values
                                const gender = document.querySelector('input[name="gender"]:checked')?.value;
                                const age = document.querySelector('input[type="number"]').value;
                                const tobacco = document.querySelector('input[name="tobacco"]:checked')?.value;
                                const coverage = document.querySelector('input[name="coverage"]:checked')?.value;

                                if (!gender || !age || !tobacco || !coverage) {
                                    alert('Please fill in all required fields');
                                    return;
                                }

                                // Simulate premium calculation
                                let basePremium = parseInt(coverage) * 0.0015; // 0.15% of coverage

                                // Age multiplier
                                const ageMultiplier = age > 50 ? 2.5 : age > 40 ? 2.0 : age > 30 ? 1.5 : 1.0;

                                // Tobacco multiplier
                                const tobaccoMultiplier = tobacco === 'yes' ? 1.8 : 1.0;

                                // Gender multiplier (women generally get lower premiums)
                                const genderMultiplier = gender === 'female' ? 0.9 : 1.0;

                                const annualPremium = Math.round(basePremium * ageMultiplier * tobaccoMultiplier * genderMultiplier);
                                const monthlyPremium = Math.round(annualPremium / 12);

                                alert(`Estimated Premium:\n\nMonthly: ‚Çπ${monthlyPremium.toLocaleString()}\nAnnual: ‚Çπ${annualPremium.toLocaleString()}\n\nThis is an approximate calculation. Actual premium may vary based on medical tests and other factors. Our team will contact you with detailed quotes.`);

                                console.log('Premium calculator:', {
                                    gender, age, tobacco, coverage,
                                    monthlyPremium, annualPremium
                                });
                            });

                            // Form Validation
                            document.querySelectorAll('input[required]').forEach(input => {
                                input.addEventListener('blur', function () {
                                    if (!this.value.trim()) {
                                        this.classList.add('border-red-500');
                                    } else {
                                        this.classList.remove('border-red-500');
                                        this.classList.add('border-green-500');
                                    }
                                });
                            });

                            // Radio button interactivity
                            document.querySelectorAll('input[type="radio"]').forEach(radio => {
                                radio.addEventListener('change', function () {
                                    // Remove active state from siblings
                                    const name = this.name;
                                    document.querySelectorAll(`input[name="${name}"]`).forEach(sibling => {
                                        const container = sibling.parentNode.querySelector('div');
                                        if (container) {
                                            container.classList.remove('border-green-500', 'bg-green-50');
                                            container.classList.add('border-gray-200');
                                        }
                                    });

                                    // Add active state to selected
                                    const container = this.parentNode.querySelector('div');
                                    if (container) {
                                        container.classList.remove('border-gray-200');
                                        container.classList.add('border-green-500', 'bg-green-50');
                                    }
                                });
                            });
