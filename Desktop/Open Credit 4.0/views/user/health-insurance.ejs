                        <script>
                            // FAQ Toggle Function
                            function toggleFAQ(index) {
                                const content = document.getElementById(`faq-content-${index}`);
                                const icon = document.getElementById(`faq-icon-${index}`);

                                if (content.classList.contains('hidden')) {
                                    content.classList.remove('hidden');
                                    icon.classList.add('rotate-180');
                                } else {
                                    content.classList.add('hidden');
                                    icon.classList.remove('rotate-180');
                                }
                            }

                            // Quick Quote Form Handler
                            document.getElementById('quickQuoteForm').addEventListener('submit', function (e) {
                                e.preventDefault();

                                // Get form data
                                const formData = new FormData(this);
                                const data = Object.fromEntries(formData);

                                // Simulate form submission
                                alert('Thank you for your interest! Our team will contact you shortly with personalized quotes.');

                                console.log('Quote form submitted:', data);
                            });

                            // Enhanced Health Calculator with Multi-step functionality
                            let currentCalculatorStep = 1;
                            const totalCalculatorSteps = 3;

                            // Step navigation functions
                            function showCalculatorStep(step) {
                                // Hide all steps
                                document.querySelectorAll('.calculator-step').forEach(stepEl => {
                                    stepEl.classList.add('hidden');
                                });

                                // Show current step
                                document.querySelector(`.calculator-step[data-step="${step}"]`).classList.remove('hidden');

                                // Update progress indicators
                                for (let i = 1; i <= totalCalculatorSteps; i++) {
                                    const indicator = document.getElementById(`step${i}-indicator`);
                                    const progress = document.getElementById(`progress${i}-${i + 1}`);

                                    if (i <= step) {
                                        indicator.classList.remove('bg-gray-300', 'text-gray-600');
                                        indicator.classList.add('bg-blue-600', 'text-white');
                                        indicator.nextElementSibling.classList.remove('text-gray-500');
                                        indicator.nextElementSibling.classList.add('text-blue-600');
                                    } else {
                                        indicator.classList.remove('bg-blue-600', 'text-white');
                                        indicator.classList.add('bg-gray-300', 'text-gray-600');
                                        indicator.nextElementSibling.classList.remove('text-blue-600');
                                        indicator.nextElementSibling.classList.add('text-gray-500');
                                    }

                                    if (progress && i < step) {
                                        progress.classList.remove('bg-gray-300');
                                        progress.classList.add('bg-blue-600');
                                    } else if (progress) {
                                        progress.classList.remove('bg-blue-600');
                                        progress.classList.add('bg-gray-300');
                                    }
                                }

                                // Update navigation buttons
                                const prevBtn = document.getElementById('prevButton');
                                const nextBtn = document.getElementById('nextButton');
                                const calcBtn = document.getElementById('calculateButton');

                                if (step === 1) {
                                    prevBtn.classList.add('hidden');
                                } else {
                                    prevBtn.classList.remove('hidden');
                                }

                                if (step === totalCalculatorSteps) {
                                    nextBtn.classList.add('hidden');
                                    calcBtn.classList.remove('hidden');
                                } else {
                                    nextBtn.classList.remove('hidden');
                                    calcBtn.classList.add('hidden');
                                }

                                currentCalculatorStep = step;
                            }

                            function validateCalculatorStep() {
                                const currentStepEl = document.querySelector(`.calculator-step[data-step="${currentCalculatorStep}"]`);
                                const requiredInputs = currentStepEl.querySelectorAll('input[required]');

                                for (let input of requiredInputs) {
                                    if (input.type === 'radio') {
                                        const radioGroup = currentStepEl.querySelectorAll(`input[name="${input.name}"]`);
                                        const isChecked = Array.from(radioGroup).some(radio => radio.checked);
                                        if (!isChecked) {
                                            alert('Please make a selection to continue');
                                            return false;
                                        }
                                    } else if (!input.value.trim()) {
                                        alert('Please fill in all required fields');
                                        input.focus();
                                        return false;
                                    }
                                }
                                return true;
                            }

                            // Navigation event listeners
                            document.getElementById('nextButton').addEventListener('click', function () {
                                if (validateCalculatorStep() && currentCalculatorStep < totalCalculatorSteps) {
                                    showCalculatorStep(currentCalculatorStep + 1);
                                }
                            });

                            document.getElementById('prevButton').addEventListener('click', function () {
                                if (currentCalculatorStep > 1) {
                                    showCalculatorStep(currentCalculatorStep - 1);
                                }
                            });

                            // Health Calculator Form Handler
                            document.getElementById('healthCalculator').addEventListener('submit', function (e) {
                                e.preventDefault();

                                if (!validateCalculatorStep()) {
                                    return;
                                }

                                // Get selected values
                                const insuranceFor = document.querySelector('input[name="insuranceFor"]:checked')?.value;
                                const coverage = document.querySelector('input[name="coverage"]:checked')?.value;
                                const age = document.getElementById('ageInput').value;
                                const pincode = document.getElementById('pincodeInput').value;

                                // Calculate premium
                                const coverageAmount = parseInt(coverage);
                                const userAge = parseInt(age);

                                // Base premium calculation (0.15% to 0.3% of coverage annually)
                                let basePremium = coverageAmount * 0.0018; // 0.18% base rate

                                // Age multipliers
                                if (userAge <= 25) basePremium *= 0.8;
                                else if (userAge <= 35) basePremium *= 1.0;
                                else if (userAge <= 45) basePremium *= 1.3;
                                else if (userAge <= 55) basePremium *= 1.8;
                                else basePremium *= 2.5;

                                // Family multipliers
                                if (insuranceFor === 'couple') basePremium *= 1.8;
                                else if (insuranceFor === 'family') basePremium *= 2.5;

                                const monthlyPremium = Math.round(basePremium / 12);

                                // Display results
                                document.getElementById('premiumAmount').textContent = `‚Çπ${monthlyPremium.toLocaleString()}`;
                                document.getElementById('selectedCoverage').textContent = `‚Çπ${(coverageAmount / 100000).toFixed(0)} Lac`;
                                document.getElementById('selectedPerson').textContent = insuranceFor.charAt(0).toUpperCase() + insuranceFor.slice(1);
                                document.getElementById('selectedAge').textContent = `${age} years`;

                                document.getElementById('calculatorResults').classList.remove('hidden');
                                document.getElementById('calculatorResults').scrollIntoView({ behavior: 'smooth' });

                                console.log('Calculator submitted:', { insuranceFor, coverage, age, pincode, monthlyPremium });
                            });

                            // Initialize calculator
                            showCalculatorStep(1);

                            // Form Validation
                            document.querySelectorAll('input[required]').forEach(input => {
                                input.addEventListener('blur', function () {
                                    if (!this.value.trim()) {
                                        this.classList.add('border-red-500');
                                    } else {
                                        this.classList.remove('border-red-500');
                                        this.classList.add('border-green-500');
                                    }
                                });
                            });
                        </script>

